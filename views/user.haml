.costs
  %table{border: 1}
    %tr
      %th
        %span order
      %th
        %span hour
      %th
        %span percent
      %th
        %span travel
      %th
        %span date
    - @costs.each do |cost|
      %tr
        %td
          %a{:href => "/order/#{cost.order_id}"}
            %span= cost.order.name
        %td
          %span= cost.hour
        %td{align: 'right'}
          %span= "#{cost.order.use_percent} %"
        %td
          %span= cost.travel
        %td
          %span= cost.date

